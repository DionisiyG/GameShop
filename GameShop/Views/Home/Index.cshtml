        <!-- Main -->
        <div id="main">
            <div class="cl">&nbsp;</div>
            <!-- Content -->
            <div id="content">
                <!-- Content Slider -->
                <div id="slider" class="box">
                    <div id="slider-holder">
                        <ul>
                            <li><a href="#"><img src="~/Content/css/images/slide1.jpg" alt="" /></a></li>
                            <li><a href="#"><img src="~/Content/css/images/slide1.jpg" alt="" /></a></li>
